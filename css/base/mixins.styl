border-radius(n=0)
  border-radius n

Center()
  margin-left auto
  margin-right auto

box(Width,Height)
    width Width
    height Height

grid(columns = 12, margin = 1em)
  &
    display block
    font-size 0

  &-cell
    display inline-block
    font-size 1rem
    margin margin
    width s('calc(%s - %s)', 100% / columns, margin * 2)

  for col in 1..columns
    &-cell--size{col}
      width s('calc(%s - %s)', 100% / columns * col, margin * 2)


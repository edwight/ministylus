a 
	text-decoration none

.section-main
	display block
	Center()
	box(100%,300px)
	background-color blue
	min-height 300px

.article
	background #fff
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	padding 0
	margin 10px
	position relative
	overflow hidden
	height 120px
	box-shadow 0 1px 2px #a1acbd
	border-radius 2px
	-webkit-transition box-shadow linear .3s
	-o-transition box-shadow linear .3s
	transition box-shadow linear .3s
	z-index 600

	.fimg 
		background #f4f4f4
		float left
		width 100px
		height 120px
		margin 0
		padding 0
		overflow hidden
		position relative
		z-index 500
		img
			width auto
			height 100%
			display block
			margin-left -40%
	.contenido
		.autor 
			font-family Lato,sans-serif
			text-transform uppercase
			font-size 11px
			font-size 1.1rem
			font-weight 700
			margin 0
			padding 6px 10px 5px
			overflow hidden
			white-space nowrap
			position absolute
			display inline-block
			a
				color rgba(56,56,56,.5)
		.title	
			color rgba(56,56,56,.9)
			padding 25px 10px 0 110px
			font-weight 700
			font-size 15px
			font-size 1.5rem
			line-height 1.1
			letter-spacing normal
			a
				color rgba(56,56,56,.9)
		.actions
			-webkit-box-sizing border-box
			-moz-box-sizing border-box
			box-sizing border-box
			overflow hidden
			position relative
			background #fff 50% none
			background-size 100% 100%
			background none,-webkit-linear-gradient(top,rgba(255,255,255,0) 0,#fff 50%)
			background none,linear-gradient(180deg,rgba(255,255,255,0) 0,#fff 50%)
			position absolute;
			width 100%
			bottom 0
			z-index 200
	

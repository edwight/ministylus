.article--no
	background #525f73 none
	background-size 100% 100%
	background none,-webkit-linear-gradient(top,#ff4513,#525f73)
	background none,linear-gradient(180deg,#ff4513,#525f73)
	width 100%
	height 250px
	//height: 260px
	margin: 10px;
	.author
		position relative
		padding 0 0 5px
		right 15px
		left auto
		top 15px
		background 0 0
		color #fff
		border-bottom 2px solid #fff
		z-index 700
		-webkit-transition all ease .2s
		-o-transition all ease .2s
		transition all ease .2s
		top: 75px
	
		font-family Lato,sans-serif
		text-transform uppercase
		font-size 11px
		font-size 1.1rem
		font-weight 700
		margin 0
		padding 6px 10px 5px
		overflow hidden
		white-space nowrap
		//position absolute
		display inline-block
		color rgba(56,56,56,.5)
	.fimg--no
		width 200px
		height 245px
		-webkit-transition all ease .2s
		-o-transition all ease .2s
		transition all ease .2s
		background 0 0
		position absolute
		//top 0
		//left 0
		width 100%
		overflow hidden
		margin 0
		padding 0
		img
			top -25%
			width 100%
			//height auto
			height 500px
			
			opacity .1
			margin 0
			position absolute
			left 50%
			-webkit-transform translateX(-50%)
			transform translateX(-50%)
			min-width none
	&:hover
		-webkit-transition: all ease .2s;
		-o-transition: all ease .2s;
		transition: all ease .2s;
		background: rgba(0,0,0,.6)

	.contenido .title
		padding 0 15px
		position relative
		right 0
		color #fff!important
		text-align right
		max-width 80%
		top 0
		z-index 500
		font-size 1.5rem
		font-weight 700